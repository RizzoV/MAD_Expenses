<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:background="@color/colorPrimaryAlpha"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
      >

        <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
            android:id="@+id/circularFillableLoaders"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_piggy"
            app:cfl_border="true"
            app:cfl_border_width="12dp"
            app:cfl_progress="90"
            app:cfl_wave_amplitude="0.06"
            app:cfl_wave_color="@color/colorAccent" />

            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_progressmsg"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/circularFillableLoaders"
                android:text="@string/progressDialogText"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="24sp">
            </TextView>
        </RelativeLayout>
</LinearLayout>