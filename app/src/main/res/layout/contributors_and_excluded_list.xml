<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smaller_horizontal_margin"
        app:cardElevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/smaller_horizontal_margin">
        <ListView
            android:id="@+id/contributors_and_excluded_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/select_contributors_description_tv"
            tools:listitem="@layout/history_member_list_row"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>
