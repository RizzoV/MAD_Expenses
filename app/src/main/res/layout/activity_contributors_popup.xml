<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_contributors_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/select_contributors_description"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/normal_text_size" />

    <ListView
        android:id="@+id/contributors_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/contributors_list_row"
        android:layout_below="@id/select_contributors_description_tv"
      />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/select_contributors_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:padding="@dimen/fab_margin"
        android:src="@drawable/ic_check" />
</RelativeLayout>