<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polito.mad.team19.mad_expenses">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GroupsListActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsListActivity" />
        </activity>
        <activity android:name=".MeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupActivity" />
        </activity>
        <activity android:name=".CreateGroupActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupActivity" />
        </activity>
        <activity android:name=".AddExpenseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupActivity" />
        </activity>
        <activity android:name=".AddProposalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupActivity" />
        </activity>
        <activity
            android:name=".GoogleSignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Classes.FirebaseSignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".AccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsListActivity" />
    </activity>
    </application>


    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>